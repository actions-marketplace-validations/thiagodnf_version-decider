{
  "name": "version-releaser",
  "description": "A GitHub action for deciding if new versions should be released",
  "version": "1.0.0",
  "author": "Thiago Ferreira",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "lint-fix": "npx eslint . --fix",
    "build": "ncc build src/index.js -o dist --source-map --license licenses.txt",
    "test": "jest ./test --coverage",
    "all": "npm run lint-fix && npm run build",
    "update-dependencies": "ncu -u"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "5.1.1",
    "@octokit/rest": "19.0.13"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.44.0",
    "jest": "^29.5.0"
  }
}
